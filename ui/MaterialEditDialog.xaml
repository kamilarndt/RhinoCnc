<Window x:Class="RhinoCncSuite.ui.MaterialEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Material" Height="400" Width="500"
        Background="#2D2D30" 
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Edit Material Properties" 
                   FontSize="18" FontWeight="Bold" Foreground="White" 
                   Margin="0,0,0,20"/>
        
        <!-- Form Fields -->
        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <!-- Name -->
                <Label Content="Name:" Foreground="#CCCCCC" Margin="0,0,0,5"/>
                <TextBox x:Name="NameTextBox" Background="#3C3C3C" Foreground="White" 
                         BorderBrush="#555" Padding="8" Margin="0,0,0,15"/>
                
                <!-- Type -->
                <Label Content="Type:" Foreground="#CCCCCC" Margin="0,0,0,5"/>
                <ComboBox x:Name="TypeComboBox" Background="#3C3C3C" Foreground="White" 
                          BorderBrush="#555" Padding="8" Margin="0,0,0,15"/>
                
                <!-- Thickness -->
                <Label Content="Thickness (mm):" Foreground="#CCCCCC" Margin="0,0,0,5"/>
                <TextBox x:Name="ThicknessTextBox" Background="#3C3C3C" Foreground="White" 
                         BorderBrush="#555" Padding="8" Margin="0,0,0,15"/>
                
                <!-- Dimensions -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <Label Content="Width (mm):" Foreground="#CCCCCC" Margin="0,0,0,5"/>
                        <TextBox x:Name="WidthTextBox" Background="#3C3C3C" Foreground="White" 
                                 BorderBrush="#555" Padding="8"/>
                    </StackPanel>
                    
                    <TextBlock Grid.Column="1" Text="×" FontSize="16" Foreground="#CCCCCC" 
                               HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,12"/>
                    
                    <StackPanel Grid.Column="2">
                        <Label Content="Length (mm):" Foreground="#CCCCCC" Margin="0,0,0,5"/>
                        <TextBox x:Name="LengthTextBox" Background="#3C3C3C" Foreground="White" 
                                 BorderBrush="#555" Padding="8"/>
                    </StackPanel>
                </Grid>
                
                <!-- Density -->
                <Label Content="Density (kg/m³):" Foreground="#CCCCCC" Margin="0,0,0,5"/>
                <TextBox x:Name="DensityTextBox" Background="#3C3C3C" Foreground="White" 
                         BorderBrush="#555" Padding="8" Margin="0,0,0,15"/>
                
                <!-- Price -->
                <Label Content="Price per m²:" Foreground="#CCCCCC" Margin="0,0,0,5"/>
                <TextBox x:Name="PriceTextBox" Background="#3C3C3C" Foreground="White" 
                         BorderBrush="#555" Padding="8" Margin="0,0,0,15"/>
                
                <!-- Color -->
                <Label Content="Color (hex):" Foreground="#CCCCCC" Margin="0,0,0,5"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="ColorTextBox" Grid.Column="0" Background="#3C3C3C" Foreground="White" 
                             BorderBrush="#555" Padding="8" TextChanged="ColorTextBox_TextChanged"/>
                    <Border x:Name="ColorPreview" Grid.Column="1" Margin="10,0,0,0" 
                            BorderBrush="#555" BorderThickness="1" CornerRadius="4"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Cancel" Click="Cancel_Click" 
                    Background="#666" Foreground="White" BorderThickness="0"
                    Padding="20,8" Margin="0,0,10,0" MinWidth="80"/>
            <Button Content="Save" Click="Save_Click" 
                    Background="#007ACC" Foreground="White" BorderThickness="0"
                    Padding="20,8" MinWidth="80"/>
        </StackPanel>
    </Grid>
</Window> 
<UserControl x:Class="RhinoCncSuite.ui.ElementOutlinerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="350"
             Background="#1E1E1E"
             Unloaded="UserControl_Unloaded">

    <UserControl.Resources>
        <!-- Modern Button Styles -->
        <Style TargetType="Button" x:Key="ModernToolbarButtonStyle">
            <Setter Property="Background" Value="#404040"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="4,2"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#007ACC"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#2D2D30"/>
                    <Setter Property="Foreground" Value="#808080"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" x:Key="SmallActionButtonStyle">
            <Setter Property="Background" Value="#404040"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="MinWidth" Value="24"/>
            <Setter Property="MinHeight" Value="20"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#007ACC"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern TreeView Style -->
        <Style TargetType="TreeView" x:Key="ModernTreeViewStyle">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="TreeViewItem" x:Key="ModernTreeViewItemStyle">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="4"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#007ACC"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#404040"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern TextBox Style -->
        <Style TargetType="TextBox" x:Key="ModernTextBoxStyle">
            <Setter Property="Background" Value="#404040"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#5A5A5A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#007ACC"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#6A6A6A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style TargetType="ComboBox" x:Key="ModernComboBoxStyle">
            <Setter Property="Background" Value="#404040"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#5A5A5A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <Grid>
                                <ToggleButton x:Name="ToggleButton"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              Focusable="False"
                                              IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                              ClickMode="Press">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="20"/>
                                        </Grid.ColumnDefinitions>
                                        <ContentPresenter Grid.Column="0"
                                                          x:Name="ContentSite"
                                                          Content="{TemplateBinding SelectionBoxItem}"
                                                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                          ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                          Margin="{TemplateBinding Padding}"
                                                          VerticalAlignment="Center"
                                                          HorizontalAlignment="Left"/>
                                        <Path Grid.Column="1"
                                              x:Name="Arrow"
                                              Fill="White"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Data="M 0 0 L 4 4 L 8 0 Z"/>
                                    </Grid>
                                </ToggleButton>
                                <Popup x:Name="Popup"
                                       Placement="Bottom"
                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                       AllowsTransparency="True"
                                       Focusable="False"
                                       PopupAnimation="Slide">
                                    <Border Background="#404040"
                                            BorderBrush="#5A5A5A"
                                            BorderThickness="1"
                                            CornerRadius="4">
                                        <ScrollViewer>
                                            <StackPanel IsItemsHost="True"/>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#6A6A6A"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Modern Header with Gradient -->
        <Border Grid.Row="0" Padding="16,12">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#2D2D30" Offset="0"/>
                    <GradientStop Color="#252526" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="Element Outliner" 
                               FontWeight="Bold" 
                               FontSize="16" 
                               Foreground="#FFFFFF"/>
                    <TextBlock Text="Manage project elements and documentation" 
                               FontSize="11" 
                               Foreground="#9CDCFE"
                               Margin="0,2,0,0"/>
                </StackPanel>
                
                <!-- Status Indicator -->
                <Border Grid.Column="1" 
                        Background="#404040" 
                        CornerRadius="12" 
                        Padding="8,4"
                        VerticalAlignment="Center">
                    <TextBlock x:Name="ElementCountText" 
                               Text="0 elements" 
                               FontSize="10" 
                               Foreground="#E0E0E0"/>
                </Border>
            </Grid>
        </Border>

        <!-- Modern Toolbar -->
        <Border Grid.Row="1" 
                Background="#333337" 
                BorderBrush="#3F3F46" 
                BorderThickness="0,1,0,1"
                Padding="12,8">
            <WrapPanel Orientation="Horizontal">
                <Button x:Name="AddElementButton" 
                        Content="➕ Add" 
                        Style="{StaticResource ModernToolbarButtonStyle}"
                        ToolTip="Add new element"
                        Click="AddElementButton_Click"/>
                <Button x:Name="EditElementButton" 
                        Content="✏️ Edit" 
                        Style="{StaticResource ModernToolbarButtonStyle}"
                        ToolTip="Edit selected element"
                        IsEnabled="False"
                        Click="EditElementButton_Click"/>
                <Button x:Name="DeleteElementButton" 
                        Content="🗑️ Delete" 
                        Style="{StaticResource ModernToolbarButtonStyle}"
                        ToolTip="Delete selected element"
                        IsEnabled="False"
                        Click="DeleteElementButton_Click"/>
                <Button x:Name="RefreshButton" 
                        Content="🔄 Refresh" 
                        Style="{StaticResource ModernToolbarButtonStyle}"
                        ToolTip="Refresh from Rhino blocks"
                        Click="RefreshButton_Click"/>
            </WrapPanel>
        </Border>

        <!-- Search and Filter Bar -->
        <Border Grid.Row="2" 
                Background="#252526" 
                Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="SearchTextBox" 
                         Grid.Column="0"
                         Style="{StaticResource ModernTextBoxStyle}"
                         TextChanged="SearchTextBox_TextChanged"
                         Tag="Search elements..."/>

                <TextBlock Grid.Column="2" 
                           Text="Type:" 
                           Foreground="White" 
                           VerticalAlignment="Center" 
                           FontSize="11"/>

                <ComboBox x:Name="TypeFilterComboBox" 
                          Grid.Column="4"
                          Style="{StaticResource ModernComboBoxStyle}"
                          SelectionChanged="TypeFilterComboBox_SelectionChanged">
                    <ComboBoxItem Content="All" Foreground="White"/>
                    <ComboBoxItem Content="Block" Foreground="White"/>
                    <ComboBoxItem Content="Component" Foreground="White"/>
                    <ComboBoxItem Content="Assembly" Foreground="White"/>
                    <ComboBoxItem Content="Part" Foreground="White"/>
                    <ComboBoxItem Content="Hardware" Foreground="White"/>
                    <ComboBoxItem Content="Other" Foreground="White"/>
                </ComboBox>
            </Grid>
        </Border>

        <!-- Element Tree with Modern Styling -->
        <Border Grid.Row="3" 
                Background="#252526" 
                BorderBrush="#3F3F46" 
                BorderThickness="1"
                Margin="12,8,12,0">
            <TreeView x:Name="ElementTreeView" 
                      Style="{StaticResource ModernTreeViewStyle}"
                      BorderThickness="0"
                      Background="Transparent"
                      Margin="8"
                      SelectedItemChanged="ElementTreeView_SelectedItemChanged">
                <TreeView.ItemContainerStyle>
                    <Style TargetType="TreeViewItem" BasedOn="{StaticResource ModernTreeViewItemStyle}"/>
                </TreeView.ItemContainerStyle>
            </TreeView>
        </Border>

        <!-- Modern Details Panel -->
        <Border Grid.Row="4" 
                Background="#252526" 
                BorderBrush="#3F3F46" 
                BorderThickness="1"
                Margin="12,8,12,12"
                CornerRadius="8">
            <Expander x:Name="DetailsExpander"
                      Header="Element Details" 
                      Background="Transparent" 
                      Foreground="White"
                      IsExpanded="False"
                      Padding="8">
                <Expander.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📋" FontSize="12" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding}" FontWeight="SemiBold" FontSize="12"/>
                        </StackPanel>
                    </DataTemplate>
                </Expander.HeaderTemplate>
                
                <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto" Margin="8">
                    <StackPanel x:Name="DetailsPanel">
                        <!-- Element Info -->
                        <Grid x:Name="ElementInfoGrid" Visibility="Collapsed">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" Foreground="#9CDCFE" FontWeight="Medium" Margin="0,0,0,6"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="ElementNameText" Foreground="White" Margin="0,0,0,6"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Type:" Foreground="#9CDCFE" FontWeight="Medium" Margin="0,0,0,6"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="ElementTypeText" Foreground="White" Margin="0,0,0,6"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Status:" Foreground="#9CDCFE" FontWeight="Medium" Margin="0,0,0,6"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="ElementStatusText" Foreground="White" Margin="0,0,0,6"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Notes:" Foreground="#9CDCFE" FontWeight="Medium" Margin="0,0,0,6"/>
                            <TextBox Grid.Row="3" Grid.Column="1" x:Name="ElementNotesTextBox" 
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     TextWrapping="Wrap" 
                                     AcceptsReturn="True"
                                     MaxHeight="60"
                                     Margin="0,0,0,6"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Files:" Foreground="#9CDCFE" FontWeight="Medium" Margin="0,0,0,6"/>
                            <StackPanel Grid.Row="4" Grid.Column="1" Margin="0,0,0,6">
                                <ListBox x:Name="AttachedFilesListBox" 
                                         Background="#404040"
                                         BorderBrush="#5A5A5A"
                                         BorderThickness="1"
                                         Foreground="White"
                                         MaxHeight="80"/>
                                <WrapPanel Orientation="Horizontal" Margin="0,4,0,0">
                                    <Button Content="📎 Add File" 
                                            Style="{StaticResource SmallActionButtonStyle}"
                                            Click="AddFileButton_Click"/>
                                    <Button Content="📂 Open" 
                                            Style="{StaticResource SmallActionButtonStyle}"
                                            Click="OpenFileButton_Click"/>
                                    <Button Content="❌ Remove" 
                                            Style="{StaticResource SmallActionButtonStyle}"
                                            Click="RemoveFileButton_Click"/>
                                </WrapPanel>
                            </StackPanel>

                            <Border Grid.Row="5" Grid.ColumnSpan="2" 
                                    Background="#333337"
                                    CornerRadius="4"
                                    Padding="8"
                                    Margin="0,8,0,0">
                                <WrapPanel Orientation="Horizontal">
                                    <Button Content="💾 Save Changes" 
                                            Style="{StaticResource SmallActionButtonStyle}"
                                            Background="#007ACC"
                                            Click="SaveElementButton_Click"/>
                                    <Button Content="↩️ Revert" 
                                            Style="{StaticResource SmallActionButtonStyle}"
                                            Click="RevertElementButton_Click"/>
                                </WrapPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </Expander>
        </Border>
    </Grid>
</UserControl> 
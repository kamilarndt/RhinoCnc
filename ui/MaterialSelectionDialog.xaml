<Window x:Class="RhinoCncSuite.ui.MaterialSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Material Catalog"
        Height="700" Width="1000"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#1E1E1E" Foreground="White"
        WindowStyle="SingleBorderWindow">
    
    <Window.Resources>
        <!-- Modern Button Styles -->
        <Style TargetType="Button" x:Key="PrimaryButtonStyle">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Margin" Value="8,4"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0E7DB8"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#404040"/>
                    <Setter Property="Foreground" Value="#808080"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" x:Key="SecondaryButtonStyle">
            <Setter Property="Background" Value="#404040"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#5A5A5A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Margin" Value="8,4"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A4A4A"/>
                    <Setter Property="BorderBrush" Value="#007ACC"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#5A5A5A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern ListView Style -->
        <Style TargetType="ListView" x:Key="ModernListViewStyle">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        </Style>

        <Style TargetType="GridViewColumnHeader" x:Key="ModernColumnHeaderStyle">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#333337"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style TargetType="ListViewItem" x:Key="ModernListViewItemStyle">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,1"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#007ACC"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#404040"/>
                </Trigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsSelected" Value="True"/>
                        <Condition Property="IsMouseOver" Value="True"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" Value="#0E7DB8"/>
                </MultiTrigger>
            </Style.Triggers>
        </Style>

        <!-- Modern TreeView Style -->
        <Style TargetType="TreeView" x:Key="ModernTreeViewStyle">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style TargetType="TreeViewItem" x:Key="ModernTreeViewItemStyle">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#007ACC"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#404040"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Modern Header -->
        <Border Grid.Row="0" Padding="24,16">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#2D2D30" Offset="0"/>
                    <GradientStop Color="#252526" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Material Catalog" 
                               FontSize="20" 
                               FontWeight="Bold"
                               Foreground="#FFFFFF"/>
                    <TextBlock Text="Browse and select materials to add to your project palette" 
                               FontSize="13" 
                               Foreground="#9CDCFE"
                               Margin="0,4,0,0"/>
                </StackPanel>
                
                <!-- Selection Counter -->
                <Border Grid.Column="1" 
                        Background="#404040" 
                        CornerRadius="16" 
                        Padding="12,6"
                        VerticalAlignment="Center">
                    <TextBlock x:Name="SelectionCountText" 
                               Text="0 selected" 
                               FontSize="11" 
                               Foreground="#E0E0E0"/>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="24,0,24,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Categories List -->
            <Border Grid.Column="0" Background="#252526" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <ListBox x:Name="CategoryListBox" 
                             Grid.Row="0"
                             Background="Transparent" 
                             BorderThickness="0"
                             SelectionChanged="CategoryListBox_SelectionChanged"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0,1"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="Bd"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Background="{TemplateBinding Background}"
                                                    Padding="{TemplateBinding Padding}"
                                                    SnapsToDevicePixels="true">
                                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="true">
                                                    <Setter TargetName="Bd" Property="Background" Value="#007ACC"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{Binding Background}" CornerRadius="3" Padding="10,8">
                                    <TextBlock Text="{Binding Name}" Foreground="White" FontWeight="SemiBold"/>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button Grid.Row="1" 
                            Content="➕ Create New Material" 
                            Style="{StaticResource SecondaryButtonStyle}" 
                            HorizontalAlignment="Stretch"
                            Margin="0,8,0,0"
                            Click="CreateNewMaterial_Click"/>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1" Width="16" 
                          Background="Transparent"
                          ResizeBehavior="PreviousAndNext"
                          ResizeDirection="Columns"/>

            <!-- Material List -->
            <Border Grid.Column="2" 
                    Background="#252526" 
                    BorderBrush="#3F3F46" 
                    BorderThickness="1"
                    CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Material List Header -->
                    <Border Grid.Row="0" 
                            Background="#2D2D30" 
                            CornerRadius="8,8,0,0"
                            Padding="16,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                       Text="Materials" 
                                       FontWeight="SemiBold" 
                                       FontSize="14"
                                       Foreground="#FFFFFF"
                                       VerticalAlignment="Center"/>
                            
                            <TextBlock Grid.Column="1"
                                       x:Name="MaterialCountText"
                                       Text="0 materials"
                                       FontSize="11"
                                       Foreground="#9CDCFE"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    
                    <!-- Material ListView -->
                    <ListView x:Name="MaterialsListView" 
                              Grid.Row="1"
                              Style="{StaticResource ModernListViewStyle}"
                              BorderThickness="0"
                              Background="Transparent"
                              Margin="8"
                              SelectionMode="Extended"
                              SelectionChanged="MaterialsListView_SelectionChanged">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem" BasedOn="{StaticResource ModernListViewItemStyle}"/>
                        </ListView.ItemContainerStyle>
                        <ListView.View>
                            <GridView>
                                <GridView.ColumnHeaderContainerStyle>
                                    <Style TargetType="GridViewColumnHeader" BasedOn="{StaticResource ModernColumnHeaderStyle}"/>
                                </GridView.ColumnHeaderContainerStyle>
                                <GridViewColumn Header="Material Name" Width="220" DisplayMemberBinding="{Binding Name}"/>
                                <GridViewColumn Header="Type" Width="80" DisplayMemberBinding="{Binding Type}"/>
                                <GridViewColumn Header="Thickness" Width="80" DisplayMemberBinding="{Binding FormattedThickness}"/>
                                <GridViewColumn Header="Dimensions" Width="120" DisplayMemberBinding="{Binding Dimensions}"/>
                                <GridViewColumn Header="Price/m²" Width="100" DisplayMemberBinding="{Binding PricePerSquareMeter, StringFormat='€{0:F2}'}"/>
                                <GridViewColumn Header="Notes" Width="150" DisplayMemberBinding="{Binding Notes}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </Border>
        </Grid>

        <!-- Modern Footer -->
        <Border Grid.Row="2" 
                Background="#252526" 
                BorderBrush="#3F3F46" 
                BorderThickness="0,1,0,0"
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Selection Info -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <TextBlock Text="💡 Tip: Hold Ctrl to select multiple materials" 
                               FontSize="11" 
                               Foreground="#9CDCFE"/>
                </StackPanel>
                
                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal">
                    <Button x:Name="CancelButton" 
                            Content="Cancel" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Click="CancelButton_Click"/>
                    <Button x:Name="SelectButton" 
                            Content="Add Selected Materials" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            IsEnabled="False"
                            Click="SelectButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window> 